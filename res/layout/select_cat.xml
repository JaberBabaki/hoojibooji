<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:background="#EA4C87"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/men_left"
                android:layout_width="42dip"
                android:layout_height="27dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="20dip"
                android:src="@drawable/filter_results_button"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="20dip"
                android:src="@drawable/main_page"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_notific_header"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="20dip"
                android:src="@drawable/notification" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center" >

            <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:text="هوجی بوجی"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/men"
                android:layout_width="48dip"
                android:layout_height="27dip"
                android:src="@drawable/menu"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_check_internet"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_signal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:orientation="vertical" >

                <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                    android:id="@+id/NewControlTextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="خطا در اتصال به اینترنت"
                    android:textColor="#000000"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_check_wifi"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="30dip"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                    android:id="@+id/NewControlTextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="بررسی تنظیمات شبکه"
                    android:textColor="#000000"
                    android:textSize="12dip" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="48dip"
                    android:layout_height="32dip"
                    android:src="@drawable/wifi_connect" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lay_check_refresh"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_no_connect"
                        android:layout_width="250dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="4dip"
                        android:background="@drawable/button_send_corner_selector"
                        android:text="تلاش مجدد"
                        android:textColor="#ffffff"
                        android:textSize="13dip" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="48dip"
                        android:layout_height="0dip"
                        android:layout_weight="0.8"
                        android:src="@drawable/refresh"
                        android:visibility="gone" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextViewYekan
                        android:id="@+id/newControlTextViewYekan1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="تلاش مجدد"
                        android:textColor="#000000"
                        android:textSize="16dip"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_check_mobile"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="48dip"
                        android:layout_height="0dip"
                        android:layout_weight="0.8"
                        android:src="@drawable/wireless" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextViewYekan
                        android:id="@+id/NewControlTextViewYekan02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="شبکه موبایل"
                        android:textColor="#000000"
                        android:textSize="16dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_main_advance_search"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="58dip"
                android:layout_margin="4dip"
                android:gravity="center"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/edt_search_filter"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@drawable/button_send_corner_search_box"
                    android:drawableLeft="@drawable/loupe"
                    android:ems="10"
                    android:gravity="right|center"
                    android:hint="جستجو..."
                    android:imeOptions="actionNone"
                    android:padding="8dip"
                    android:textColor="#000000"
                    android:textSize="13dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_ls"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="0.8"
                android:orientation="vertical" android:layout_margin="6dip">

                <ListView
                    android:id="@+id/lst_st"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:cacheColorHint="@null"
                    android:clickable="false"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:divider="@null"
                    android:dividerHeight="0dip"
                    android:drawable="@android:color/transparent"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:visibility="visible" >
                    <!-- Preview: listitem=@layout/item_filter -->
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_margin="8dip"
                    android:orientation="horizontal" android:layout_marginTop="8dip">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dip"
                        android:layout_weight="0.5"
                        android:gravity="bottom|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_l_filter"
                            android:layout_width="42dip"
                            android:layout_height="32dip"
                            android:layout_marginLeft="25dip"
                            android:src="@drawable/back" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dip"
                        android:layout_weight="0.5"
                        android:gravity="bottom|right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_r_filter"
                            android:layout_width="42dip"
                            android:layout_height="32dip"
                            android:layout_marginRight="25dip"
                            android:src="@drawable/r" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>