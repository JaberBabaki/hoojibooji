<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" android:background="@drawable/shape" android:layout_marginBottom="190dip" android:layout_marginTop="190dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical|center_horizontal" android:visibility="gone">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_margin="4dip"
                android:src="@drawable/signs" />

            <TextView
                android:id="@+id/txt_header_conected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dip"
                android:text="خطا در ارتباط"
                android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="right|center" android:textSize="16dip"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:src="#DB0A5B" android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:visibility="gone"/>

        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
            android:id="@+id/txt_message_conected"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:text="نسخه جدید برنامه هم اکنون قابل دریافت است"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="14dip" android:layout_margin="8dip" android:layout_gravity="center" android:gravity="center" android:textColor="#000000" android:singleLine="false"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip" android:layout_marginBottom="2dip" android:layout_marginLeft="2dip" android:layout_marginRight="2dip" android:layout_weight="0.5" android:gravity="bottom">

            <Button
                android:id="@+id/btn_download"
                android:layout_width="0dip"
                android:layout_height="38dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_corner_dialog"
                android:text="دریافت"
                android:textColor="#ffffff"
                android:textSize="12dip" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>