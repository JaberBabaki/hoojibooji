<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" android:background="@drawable/shape" android:layout_marginBottom="190dip" android:layout_marginTop="190dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
            android:id="@+id/txt_message_conected"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:text="آیا از حذف این اعلامیه مطمئن هستید؟"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="16dip" android:layout_margin="8dip" android:layout_gravity="center" android:gravity="right|center" android:textColor="#000000" android:singleLine="false" android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip" android:layout_weight="0.5" android:gravity="bottom" android:layout_margin="2dip">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginRight="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_corner_dialog"
                android:text="بازگشت"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_delete_ok"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginLeft="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_corner_dialog"
                android:text="حذف"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>