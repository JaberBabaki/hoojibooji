                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/lay_img_show_product"
                    android:layout_width="fill_parent"
                    android:layout_height="180dip"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/img_store_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_default_show"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/no_product_pic"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#0f0fff"
                    android:visibility="gone" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_waite_show_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="55dp"
                        android:layout_weight="0.5"
                        android:text="در حال دریافت..."
                        android:textColor="#00c853"
                        android:textSize="16dip"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/shape_details_product_logo_store"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_name_store_show_details"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="---"
                        android:textColor="#EA4C87" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <com.futuredeveloper.android.shopfinder.customcontrol.RoundedCornerImageView
                            android:id="@+id/img_logo_details_store"
                            android:layout_width="55dip"
                            android:layout_height="55dip"
                            android:src="@drawable/logo_default" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_salary_name_store_show"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="---"
                        android:textColor="#EA4C87" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView07"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="نام فروشنده:"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_city_store_show"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="---"
                        android:textColor="#EA4C87" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView05"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="نام شهر:"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_type_store_show"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="---"
                        android:textColor="#EA4C87" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView03"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="نوع فروشگاه"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_web_details_store"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="---"
                        android:textColor="#EA4C87" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView09"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="وب سایت:"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="2dip"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="آدرس :"
                        android:textColor="#000000" />

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_addrress_store_store_show"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginLeft="4dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="2dip"
                        android:layout_weight="0.5"
                        android:gravity="right|center"
                        android:text="آدرس: "
                        android:textColor="#EA4C87" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/lay_go_map"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginBottom="28dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/btn_go_map"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="4dip"
                        android:layout_weight="0.2"
                        android:background="@drawable/button_send_corner_selector"
                        android:text="نشان دادن روی نقشه"
                        android:textColor="#ffffff"
                        android:textSize="13dip" />

                    <ImageView
                        android:id="@+id/ImageView09"
                        android:layout_width="55dip"
                        android:layout_height="25dip"
                        android:layout_alignParentTop="false"
                        android:layout_alignRight="@+id/btn_go_map"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.2"
                        android:src="@drawable/map_location" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@drawable/shape_details_product"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView18"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="2dip"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="برترین کالای فروشگاه"
                        android:textColor="#000000"
                        android:textSize="12dip" />
                </LinearLayout>

                <com.futuredeveloper.android.shopfinder.customcontrol.MyGridView
                    android:id="@+id/gri_all_store"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:numColumns="2" >

                    <!-- Preview: listitem=@layout/item_tiles -->
                </com.futuredeveloper.android.shopfinder.customcontrol.MyGridView>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:src="#EA4C87" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="85dip"
                    android:layout_marginBottom="1dip"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginTop="20dip"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/lay_go_idea"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="center"
                        android:orientation="vertical" android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="fill_parent"
                            android:layout_height="32dip"
                            android:src="@drawable/contact_form" />

                        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                            android:id="@+id/NewControlTextView01"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            android:text="ارسال نظر"
                            android:textColor="#EA4C87"
                            android:textSize="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_call_store_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ImageView06"
                            android:layout_width="fill_parent"
                            android:layout_height="32dip"
                            android:src="@drawable/phone_store" />

                        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                            android:id="@+id/NewControlTextView02"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            android:text="تماس"
                            android:textColor="#EA4C87"
                            android:textSize="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_report_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ImageView07"
                            android:layout_width="fill_parent"
                            android:layout_height="32dip"
                            android:src="@drawable/report_product" />

                        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                            android:id="@+id/NewControlTextView04"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            android:text="گزارش "
                            android:textColor="#EA4C87"
                            android:textSize="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_shaer_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ImageView08"
                            android:layout_width="fill_parent"
                            android:layout_height="32dip"
                            android:src="@drawable/share_product" />

                        <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                            android:id="@+id/NewControlTextView06"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip"
                            android:gravity="center"
                            android:text="ارسال"
                            android:textColor="#EA4C87"
                            android:textSize="10dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>