<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_margin="4dip">

        <LinearLayout
            android:id="@+id/lay_item_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="0.4"
                android:orientation="vertical" android:layout_margin="3dip">

                <LinearLayout
                    android:id="@+id/add_contact"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal" android:gravity="center">

                    <ImageView
                        android:id="@+id/img_arrow_faq"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/arrows_faq_r" />

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/img_notific_do"
                        android:layout_width="78dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/arrows_faq_r" android:visibility="visible"/>

                    <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                        android:id="@+id/txt_title"
                        android:layout_width="0dip"
                        android:layout_height="70dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="4dip"
                        android:layout_marginRight="4dip"
                        android:layout_marginTop="2dip"
                        android:gravity="right|center"
                        android:singleLine="false"
                        android:text="---"
                        android:textColor="#203664"
                        android:textSize="14dip" android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/img_view"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/unview" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>