<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" android:gravity="top" android:background="@drawable/shape" android:layout_marginBottom="40dip" android:layout_marginTop="40dip" android:layout_marginLeft="30dip" android:layout_marginRight="30dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="58dip"
            android:orientation="vertical" android:background="#aaaaaa" android:gravity="center" android:layout_margin="4dip">

            <EditText
                android:id="@+id/edt_search_filter"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/button_send_corner_search_box"
                android:drawableLeft="@drawable/loupe"
                android:ems="10"
                android:gravity="right|center"
                android:hint="جستجو..."
                android:imeOptions="actionNone"
                android:padding="8dip"
                android:textColor="#000000"
                android:textSize="13dip" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_ls"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_margin="8dip"
            android:orientation="vertical" android:layout_weight="0.8">

            <ListView
                android:id="@+id/lst_st"
                android:layout_width="220dip"
                android:layout_height="fill_parent"
                android:background="#eeeeee"
                android:cacheColorHint="@null"
                android:clickable="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:drawable="@android:color/transparent"
                android:duplicateParentState="true"
                android:focusable="false"
                android:visibility="visible" 
>
                <!-- Preview: listitem=@layout/item_ostan -->
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dip"
                    android:layout_weight="0.5"
                    android:gravity="bottom|left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_l_filter"
                        android:layout_width="32dip"
                        android:layout_height="22dip"
                        android:layout_marginLeft="16dip"
                        android:src="@drawable/back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dip"
                    android:layout_weight="0.5"
                    android:gravity="bottom|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_r_filter"
                        android:layout_width="32dip"
                        android:layout_height="22dip"
                        android:layout_marginRight="16dip"
                        android:src="@drawable/r" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:orientation="horizontal" android:gravity="bottom">

                <Button
                    android:id="@+id/btn_back_filter"
                    android:layout_width="0dip"
                    android:layout_height="38dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_send_corner_dialog"
                    android:text="بازگشت"
                    android:textColor="#ffffff"
                    android:textSize="12dip" />

                <Button
                    android:id="@+id/btn_search_filter"
                    android:layout_width="0dip"
                    android:layout_height="38dip"
                    android:layout_marginLeft="2dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_send_corner_dialog"
                    android:text="جستجو"
                    android:textColor="#ffffff"
                    android:textSize="12dip" android:enabled="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>