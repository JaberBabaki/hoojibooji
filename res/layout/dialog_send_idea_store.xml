<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:descendantFocusability="beforeDescendants" android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" android:gravity="center" android:background="@drawable/shape" android:layout_marginBottom="70dip" android:layout_marginTop="70dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                android:id="@+id/txt_header_send_idea_store"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:text="ارسال نظر"
                android:textColor="#000000"
                android:textSize="15dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="2dip" android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_marginTop="16dip">

            <EditText
                android:id="@+id/edt_name_send_store"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="@drawable/button_send_corner_dialog_box"
                android:ems="10"
                android:gravity="right"
                android:hint="نام"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip" android:descendantFocusability="beforeDescendants" android:focusable="true" android:focusableInTouchMode="true" android:layout_marginTop="8dip">

            <EditText
                android:id="@+id/edt_email_send_store"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="@drawable/button_send_corner_dialog_box"
                android:ems="10"
                android:gravity="right"
                android:hint="ایمیل"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:password="false"
                android:singleLine="true"
                android:textSize="14dip" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_confim_pas_dialog_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip" android:visibility="visible" android:layout_marginTop="8dip">

            <EditText
                android:id="@+id/edt_text_send_store"
                android:layout_width="match_parent"
                android:layout_height="138dip"
                android:background="@drawable/button_send_corner_dialog_box"
                android:ems="10"
                android:gravity="right"
                android:hint="متن پیام"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:password="false"
                android:singleLine="false"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_login_dialog_login"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center" android:layout_marginTop="16dip" android:layout_marginBottom="5dip" android:layout_marginLeft="5dip" android:layout_marginRight="5dip">

            <Button
                android:id="@+id/btn_back_send_store_idea"
                android:layout_width="0dp"
                android:layout_height="38dip"
                android:layout_marginRight="4dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_corner_dialog"
                android:text="بازگشت"
                android:textColor="#ffffff"
                android:textSize="13dip" />

            <Button
                android:id="@+id/btn_ok_send_store_idea"
                android:layout_width="0dip"
                android:layout_height="38dip"
                android:layout_marginLeft="4dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_corner_dialog"
                android:text="ارسال"
                android:textColor="#ffffff"
                android:textSize="13dip" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>