<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#e5e5e5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="58dip"
        android:background="#EA4C87"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/main_page" />

            <ImageView
                android:id="@+id/img_notific_header"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/notification" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center" >

            <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هوجی بوجی"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/men"
                android:layout_width="48dip"
                android:layout_height="27dip"
                android:src="@drawable/menu" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/lay_idea_fouce"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/shape_details_product"
                android:orientation="vertical" android:layout_marginTop="6dip">

                <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                    android:id="@+id/txt_title_show"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="8dip"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="---"
                    android:textColor="#1BBC9B"
                    android:textSize="16dip" />

                <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                    android:id="@+id/txtDateMain"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="0.5"
                    android:gravity="bottom|left"
                    android:text="---"
                    android:textColor="#1BBC9B" android:textSize="13dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/shape_details_product"
                android:orientation="vertical" android:gravity="center">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/img_notific_do_show"
                    android:layout_width="fill_parent"
                    android:layout_height="180dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrows_faq_r"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/shape_details_product"
                android:orientation="vertical" android:gravity="center">

                <com.futuredeveloper.android.shopfinder.customcontrol.NewControlTextView
                    android:id="@+id/txtMainMain"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_margin="8dip"
                    android:gravity="top|right"
                    android:text="---"
                    android:textColor="#0A1F3B" android:layout_weight="0.8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" android:layout_weight="0.2" android:gravity="center" android:layout_marginBottom="8dip">

                    <Button
                        android:id="@+id/btn_delete_noti"
                        android:layout_width="250dip"
                        android:layout_height="45dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:background="@drawable/button_send_corner_dialog"
                        android:text="حذف اعلامیه"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>